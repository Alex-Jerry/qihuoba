<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chart_background"
    android:orientation="vertical"
    tools:context="com.yjjr.yjfutures.ui.trade.TradeActivity">

    <RelativeLayout
        android:id="@+id/vg_settlement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dark"
        android:padding="@dimen/root_padding_10">

        <TextView
            android:id="@+id/tv_yue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用余额:"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tv_yue_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_yue"
            android:text="￥5000"
            android:textColor="@color/third_text_color"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="冻结保证金:"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tv_margin_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_margin"
            android:layout_below="@id/tv_margin"
            android:text="￥5000"
            android:textColor="@color/third_text_color"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/tv_deposit"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_common_btn_bg"
            android:drawableLeft="@drawable/ic_wallet"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/deposit"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vg_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dark"
        android:padding="@dimen/root_padding_10">

        <TextView
            android:id="@+id/tv_direction"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="看涨"/>

        <TextView
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/root_padding_10"
            android:layout_toRightOf="@id/tv_direction"
            android:text="1手"/>

        <TextView
            android:id="@+id/tv_order"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_direction"
            android:text="@string/trader_detail"/>


        <TextView
            android:id="@+id/tv_total"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="持仓总获利\n1000"/>

        <TextView
            android:id="@+id/tv_close_order"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/one_click_position"/>
    </RelativeLayout>


    <com.yjjr.yjfutures.widget.NestRadioGroup
        android:id="@+id/rg_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/root_padding_10"
        android:background="@color/chart_background"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_chart1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/root_padding_10"
            android:background="@drawable/selector_trade_rb_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="4dp"
            android:text="闪电图"
            android:textColor="@color/selector_trade_rb_text_color"
            android:textSize="@dimen/sp_12"
            />

        <RadioButton
            android:id="@+id/rb_chart2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/root_padding_10"
            android:background="@drawable/selector_trade_rb_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="4dp"
            android:text="分时图"
            android:textColor="@color/selector_trade_rb_text_color"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:id="@+id/tv_kchart"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/root_padding_10"
            android:background="@drawable/selector_trade_rb_bg"
            android:button="@null"
            android:drawableRight="@drawable/ic_down_arrow"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/kchart"
            android:textColor="@color/selector_trade_rb_text_color"
            android:textSize="@dimen/sp_12"
            />

        <RadioButton
            android:id="@+id/rb_chart4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/root_padding_10"
            android:background="@drawable/selector_trade_rb_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="4dp"
            android:text="盘口"
            android:textColor="@color/selector_trade_rb_text_color"
            android:textSize="@dimen/sp_12"/>
    </com.yjjr.yjfutures.widget.NestRadioGroup>

    <com.yjjr.yjfutures.widget.NoTouchScrollViewpager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/pb_left"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="45"
            android:progressDrawable="@drawable/bg_horizontal_pb_trade_red"/>

        <TextView
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/root_padding_10"
            android:layout_marginRight="@dimen/root_padding_10"
            android:text="买卖量"
            android:textColor="@color/third_text_color"/>

        <ProgressBar
            android:id="@+id/pb_right"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="45"
            android:progressDrawable="@drawable/bg_horizontal_pb_trade_green"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/root_padding_10"
        android:background="@color/chart_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_left"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/main_text_color"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_online_tx_green"
                android:gravity="center"
                tools:text="113.881"/>

            <TextView
                android:id="@+id/tv_right"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/main_text_color"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_online_tx_red"
                android:gravity="center"
                tools:text="113.881"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/main_text_color"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tv_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:textColor="@color/main_text_color"
            android:layout_marginRight="20dp"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tv_center"
            style="@style/text_color_333333_12sp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_fast_order"
            android:drawableTop="@drawable/ic_fast_order"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/closed"
            android:textColor="@color/third_text_color"/>
    </FrameLayout>
</LinearLayout>
