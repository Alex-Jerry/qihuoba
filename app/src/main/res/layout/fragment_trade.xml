<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chart_background"
    android:orientation="vertical"
    tools:context="com.yjjr.yjfutures.ui.trade.TradeActivity">

    <com.yjjr.yjfutures.widget.HeaderView
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:background_color="@color/background_dark"
        app:main_title="美原油 CL1078"
        app:sub_title="玩法"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dark"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@color/third_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="123"/>

        <TextView
            android:id="@+id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@color/third_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="123"/>

        <TextView
            android:id="@+id/tv_change_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@color/third_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="123"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/vg_settlement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dark"
        android:paddingBottom="18dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:paddingTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_yue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用余额:"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tv_yue_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_yue"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/third_text_color"
            android:textSize="18sp"
            tools:text="￥5000"/>

        <TextView
            android:id="@+id/tv_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="保证金:"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tv_margin_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_margin"
            android:layout_below="@id/tv_margin"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/second_text_color"
            android:textSize="18sp"
            tools:text="￥5000"/>

        <TextView
            android:id="@+id/tv_deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_common_btn_bg"
            android:drawableLeft="@drawable/ic_wallet"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:text="@string/deposit"
            android:textColor="@color/selector_common_btn_text_color"
            android:textSize="18sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vg_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dark"
        android:padding="@dimen/root_padding_10"
        android:visibility="gone">

        <View
            android:id="@+id/view_color"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_alignLeft="@+id/tv_direction"
            android:layout_alignRight="@+id/tv_direction"
            android:layout_marginTop="4dp"
            android:background="@drawable/shape_online_tx_green"/>

        <TextView
            android:id="@+id/tv_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_color"
            android:layout_marginLeft="@dimen/root_padding_10"
            android:layout_marginTop="6dp"
            android:textColor="@color/main_color_green"
            android:textSize="@dimen/sp_14"
            tools:text="看涨1手"/>


        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/sp_14"
            tools:text="持仓盈亏\n1000"/>

        <TextView
            android:id="@+id/tv_close_order"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_bg_one_click_close"
            android:gravity="center"
            android:text="@string/one_click_position"
            android:textColor="@color/third_text_color"
            android:textSize="@dimen/sp_12"/>
    </RelativeLayout>

    <View
        style="@style/style_divider"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yjjr.yjfutures.widget.NestRadioGroup
            android:id="@+id/rg_nav"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/chart_background"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_chart1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_chart_rb_bg"
                android:button="@null"
                android:gravity="center"
                android:text="分时图"
                android:textColor="@color/selector_chart_rb_text_color"
                android:textSize="@dimen/sp_12"
                />

            <View
                android:layout_width="@dimen/common_divider_small"
                android:layout_height="match_parent"
                android:background="@color/divider_color"/>

            <TextView
                android:id="@+id/tv_kchart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_chart_rb_bg"
                android:button="@null"
                android:drawableRight="@drawable/ic_down_arrow"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/kchart"
                android:textColor="@color/selector_chart_rb_text_color"
                android:textSize="@dimen/sp_12"
                />

            <View
                android:layout_width="@dimen/common_divider_small"
                android:layout_height="match_parent"
                android:background="@color/divider_color"/>

            <RadioButton
                android:id="@+id/rb_chart2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_chart_rb_bg"
                android:button="@null"
                android:gravity="center"
                android:text="盘口"
                android:textColor="@color/selector_chart_rb_text_color"
                android:textSize="@dimen/sp_12"/>

        </com.yjjr.yjfutures.widget.NestRadioGroup>

        <ImageView
            android:id="@+id/tv_fullscreen"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/ic_full_chart"
            />
    </FrameLayout>

    <View
        style="@style/style_divider"/>

    <com.yjjr.yjfutures.widget.NoTouchScrollViewpager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <com.yjjr.yjfutures.widget.MarketDepthView
        android:id="@+id/market_depth_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/sp_16"
            tools:text="平仓"/>

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/sp_16"
            tools:text="追加"/>

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/positions"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/sp_16"/>

    </LinearLayout>


    <View
        style="@style/style_divider"/>


    <TextView
        android:id="@+id/tv_rest"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/second_text_color"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="休市中\n下一个交易时间段：%s"/>
</LinearLayout>
