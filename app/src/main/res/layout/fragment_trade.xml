<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.yjjr.yjfutures.ui.trade.TradeActivity">

    <com.yjjr.yjfutures.widget.HeaderView
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:main_title="美原油 CL1078"
        app:sub_title="玩法"/>

    <RelativeLayout
        android:id="@+id/vg_settlement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_bottom_line"
        android:padding="@dimen/root_padding_10">

        <TextView
            android:id="@+id/tv_yue"
            style="@style/text_color_666666_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用余额    (元):"/>

        <TextView
            android:id="@+id/tv_yue_value"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/root_padding_10"
            android:layout_toRightOf="@id/tv_yue"
            android:text="￥5000"/>

        <TextView
            android:id="@+id/tv_margin"
            style="@style/text_color_666666_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_yue"
            android:layout_marginTop="4dp"
            android:text="可用保证金(元):"/>

        <TextView
            android:id="@+id/tv_margin_value"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_margin"
            android:layout_marginLeft="@dimen/root_padding_10"
            android:layout_toRightOf="@id/tv_margin"
            android:text="￥5000"/>

        <TextView
            android:id="@+id/tv_deposit"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/deposit"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vg_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_bottom_line"
        android:padding="@dimen/root_padding_10">

        <TextView
            android:id="@+id/tv_direction"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="看涨"/>

        <TextView
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/root_padding_10"
            android:layout_toRightOf="@id/tv_direction"
            android:text="1手"/>

        <TextView
            android:id="@+id/tv_order"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_direction"
            android:text="@string/trader_detail"/>


        <TextView
            android:id="@+id/tv_total"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="持仓总获利\n1000"/>

        <TextView
            android:id="@+id/tv_close_order"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/one_click_position"/>
    </RelativeLayout>


    <RadioGroup
        android:id="@+id/rg_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_bottom_line"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_chart1"
            style="@style/text_color_333333_14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/root_padding_10"
            android:text="闪电图"
            android:textColor="@color/selector_trade_rb_text_color"
            />

        <RadioButton
            android:id="@+id/rb_chart2"
            style="@style/text_color_333333_14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/root_padding_10"
            android:text="分时图"
            android:textColor="@color/selector_trade_rb_text_color"
            />

        <RadioButton
            android:id="@+id/rb_chart3"
            style="@style/text_color_333333_14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/root_padding_10"
            android:text="K线图"
            android:textColor="@color/selector_trade_rb_text_color"
            />

        <RadioButton
            android:id="@+id/rb_chart4"
            style="@style/text_color_333333_14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/root_padding_10"
            android:text="盘口"
            android:textColor="@color/selector_trade_rb_text_color"/>
    </RadioGroup>

    <com.yjjr.yjfutures.widget.NoTouchScrollViewpager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/root_padding_10"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/pb_left"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="45"/>

        <TextView
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/root_padding_10"
            android:layout_marginRight="@dimen/root_padding_10"
            android:text="买卖量"/>

        <ProgressBar
            android:id="@+id/pb_right"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="45"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/root_padding_10"
        android:layout_marginRight="@dimen/root_padding_10"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tv_left"
                style="@style/text_color_ffffff_12sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_online_tx_green"
                android:gravity="center"
                android:paddingRight="16dp"
                android:textStyle="bold"
                tools:text="113.881"/>

            <TextView
                android:id="@+id/tv_right"
                style="@style/text_color_ffffff_12sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_online_tx_red"
                android:gravity="center"
                android:paddingRight="4dp"
                android:textStyle="bold"
                tools:text="113.881"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_center"
            style="@style/text_color_333333_12sp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_online_tx_white"
            android:gravity="center"
            android:text="@string/closed"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_bottom"
        style="@style/text_color_333333_14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/root_padding_10"
        android:gravity="center"
        android:text="本段时间持仓至"/>
</LinearLayout>
