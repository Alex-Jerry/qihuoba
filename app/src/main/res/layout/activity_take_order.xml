<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/chart_background"
    tools:context="com.yjjr.yjfutures.ui.trade.TakeOrderActivity">

    <com.yjjr.yjfutures.widget.HeaderView
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:main_title="买入委托"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="@dimen/root_padding_15">
            <TextView
                android:id="@+id/tv_symbol"
                style="@style/text_color_333333_14sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/symbol"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/tv_info"
                style="@style/text_color_333333_14sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/sp_14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_divider_small"
                android:background="@color/divider_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center"
                android:padding="@dimen/root_padding_15">

                <TextView
                    style="@style/text_color_333333_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/trade_num"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"/>

                <RadioGroup
                    android:id="@+id/rg_hand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_hand_1"
                        android:layout_width="38dp"
                        android:layout_height="17dp"
                        android:background="@drawable/selector_trade_rb_bg"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="1手"
                        android:textColor="@color/selector_trade_rb_text_color"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rb_hand_2"
                        android:layout_width="38dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/selector_trade_rb_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="2手"
                        android:textColor="@color/selector_trade_rb_text_color"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rb_hand_3"
                        android:layout_width="38dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/selector_trade_rb_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="3手"
                        android:textColor="@color/selector_trade_rb_text_color"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rb_hand_4"
                        android:layout_width="38dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/selector_trade_rb_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="4手"
                        android:textColor="@color/selector_trade_rb_text_color"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rb_hand_5"
                        android:layout_width="38dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/selector_trade_rb_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="5手"
                        android:textColor="@color/selector_trade_rb_text_color"
                        android:textSize="12sp"/>
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_divider_small"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center"
                android:padding="@dimen/root_padding_15">

                <TextView
                    style="@style/text_color_333333_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="触发止赢"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="=触发止损*5"
                    android:textColor="@color/main_color_red"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_divider_small"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center"
                android:padding="@dimen/root_padding_15">

                <TextView
                    android:id="@+id/textView"
                    style="@style/text_color_333333_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="触发止损"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"/>


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_sl_1"
                        android:layout_width="46dp"
                        android:layout_height="17dp"
                        android:background="@drawable/selector_trade_rb_bg"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="$170"
                        android:textColor="@color/selector_trade_rb_text_color"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rb_sl_2"
                        android:layout_width="46dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/selector_trade_rb_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="$240"
                        android:textColor="@color/selector_trade_rb_text_color"
                        android:textSize="12sp"/>
                    <RadioButton
                        android:id="@+id/rb_sl_3"
                        android:layout_width="46dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/selector_trade_rb_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="$330"
                        android:textColor="@color/selector_trade_rb_text_color"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rb_sl_4"
                        android:layout_width="46dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/selector_trade_rb_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="$470"
                        android:textColor="@color/selector_trade_rb_text_color"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rb_sl_5"
                        android:layout_width="46dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/selector_trade_rb_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="$670"
                        android:textColor="@color/selector_trade_rb_text_color"
                        android:textSize="12sp"/>
                </RadioGroup>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_divider_small"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center"
                android:padding="@dimen/root_padding_15">

                <TextView
                    style="@style/text_color_333333_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/bzj"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:id="@+id/bzj_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="$123"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_divider_small"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center"
                android:padding="@dimen/root_padding_15">

                <TextView
                    style="@style/text_color_333333_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/zhjjf"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:id="@+id/trade_fee_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="$123"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_divider_small"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center"
                android:padding="@dimen/root_padding_15">

                <TextView
                    android:id="@+id/textView2"
                    style="@style/text_color_333333_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/total_pay"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:id="@+id/total_pay_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="$123"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_divider_small"
                android:background="@color/divider_color"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:padding="@dimen/root_padding_15"
                android:text="说明：\n1.一旦开启，点击购买\n2.适当操作，理性投资"
                android:textColor="@color/second_text_color"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/selector_common_btn_bg"
        android:textColor="@color/selector_common_btn_text_color"
        android:text="@string/confirm"/>
</LinearLayout>
