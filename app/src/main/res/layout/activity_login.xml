<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_dark"
        android:orientation="vertical"
        android:padding="@dimen/root_padding_15">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/ic_launcher" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/main_text_color"
                android:text="@string/phone"/>
            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/input_user"
                android:textSize="@dimen/sp_16"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:inputType="text"
                android:textColorHint="@color/second_text_color"
                android:textColor="@color/main_text_color"
                android:maxLines="1"
                android:paddingLeft="45dp"
                android:paddingRight="30dp" />


            <ImageView
                android:id="@+id/iv_del1"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_input_delete"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/main_text_color"
                android:text="@string/password"/>
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/input_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="@dimen/sp_16"
                android:textColorHint="@color/second_text_color"
                android:textColor="@color/main_text_color"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="45dp"
                android:paddingRight="30dp" />

            <ImageView
                android:id="@+id/iv_del2"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_input_delete"
                android:visibility="gone" />

        </FrameLayout>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_common_btn_bg"
            android:text="@string/login"
            android:textColor="@color/selector_common_btn_text_color" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/root_padding_10"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_contact"
            android:textColor="@color/main_color"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_customer_server" />
    <TextView
        android:id="@+id/tv_forget_pwd"
        android:textColor="@color/main_color"
        android:textSize="@dimen/sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/foget_pwd" />
    </FrameLayout>
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/free_register"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_17sp" />

    </LinearLayout>