<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/activity_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/root_padding_15">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:text="@string/register"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_17sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/ic_launcher" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_color_ced0d5_all_1_circle_2"
                android:drawableLeft="@drawable/icon_username"
                android:drawablePadding="20dp"
                android:inputType="phone"
                android:maxLines="1"
                android:padding="@dimen/root_padding_10"
                android:paddingRight="30dp" />


            <ImageView
                android:id="@+id/iv_del1"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_input_delete"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_color_ced0d5_all_1_circle_2"
                android:drawableLeft="@drawable/icon_lock"
                android:drawablePadding="20dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="@dimen/root_padding_10"
                android:paddingRight="30dp" />

            <ImageView
                android:id="@+id/iv_del2"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_input_delete"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_forget_pwd"
            style="@style/text_color_666666_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/root_padding_10"
            android:text="@string/foget_pwd" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_common_btn_bg"
            android:text="@string/login"
            android:textColor="@color/selector_common_btn_text_color" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>