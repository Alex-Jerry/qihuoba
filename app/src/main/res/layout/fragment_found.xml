<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.found.FoundFragment">

    <TextView
        style="@style/text_color_333333_17sp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_bg_bottom_line"
        android:gravity="center"
        android:text="@string/found"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/root_padding_10"
        android:background="@drawable/shape_bg_bottom_line"
        android:orientation="vertical"
        android:paddingLeft="@dimen/root_padding_15">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_one"
                style="@style/text_color_333333_15sp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginRight="@dimen/root_padding_10"
                android:layout_marginTop="@dimen/common_divider_small"
                android:background="@drawable/shape_bg_bottom_line"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:text="公告"/>

            <TextView
                style="@style/text_color_666666_12sp"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_gravity="right"
                android:layout_marginRight="26dp"
                android:gravity="center"
                tools:text="审核中"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_two"
                style="@style/text_color_333333_15sp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginRight="@dimen/root_padding_10"
                android:background="@drawable/shape_bg_bottom_line"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:text="任务中心"/>

            <TextView
                style="@style/text_color_666666_12sp"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_gravity="right"
                android:layout_marginRight="26dp"
                android:gravity="center"
                tools:text="审核中"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_three"
                style="@style/text_color_333333_15sp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginRight="@dimen/root_padding_10"
                android:background="@drawable/shape_bg_bottom_line"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:text="客服中心"/>

            <TextView
                style="@style/text_color_666666_12sp"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_gravity="right"
                android:layout_marginRight="26dp"
                android:gravity="center"
                tools:text="审核中"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_four"
                style="@style/text_color_333333_15sp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginRight="@dimen/root_padding_10"
                android:background="@drawable/shape_bg_bottom_line"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:text="推广赚钱"/>

            <TextView
                style="@style/text_color_666666_12sp"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_gravity="right"
                android:layout_marginRight="26dp"
                android:gravity="center"
                tools:text="市场资讯"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_five"
                style="@style/text_color_333333_15sp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginRight="@dimen/root_padding_10"
                android:background="@drawable/shape_bg_bottom_line"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:text="客服中心"/>

            <TextView
                style="@style/text_color_666666_12sp"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_gravity="right"
                android:layout_marginRight="26dp"
                android:gravity="center"
                tools:text="审核中"/>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>
