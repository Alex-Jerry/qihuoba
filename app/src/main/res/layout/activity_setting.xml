<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/chart_background"
    tools:context="com.yjjr.yjfutures.ui.mine.SettingActivity">

    <com.yjjr.yjfutures.widget.HeaderView
        android:id="@+id/header_view"
        app:main_title="@string/setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/root_padding_15"
        android:background="@drawable/shape_bg_top_bottom_line">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_bind_phone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingRight="@dimen/dp_10"
            android:background="@drawable/shape_bg_top_bottom_line"
            android:drawableRight="@drawable/icon_right_arrow"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="@dimen/dp_10"
            android:text="@string/bind_phone"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tv_phone"
            style="@style/text_color_666666_12sp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginRight="26dp"
            android:gravity="center"
            tools:text="市场资讯"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingRight="@dimen/dp_10"
            android:background="@drawable/shape_bg_bottom_line"
            android:drawableRight="@drawable/icon_right_arrow"
            android:gravity="center_vertical"
            android:text="@string/login_pwd"
            android:drawableLeft="@drawable/ic_lock1"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/sp_14"/>

        <TextView
            style="@style/text_color_666666_12sp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginRight="26dp"
            android:gravity="center"
            android:text="@string/modify"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_help"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingRight="@dimen/dp_10"
        android:background="@drawable/shape_bg_bottom_line"
        android:drawableRight="@drawable/icon_right_arrow"
        android:gravity="center_vertical"
        android:text="@string/help_center"
        android:drawableLeft="@drawable/ic_help"
        android:drawablePadding="@dimen/dp_10"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/sp_14"/>
    <TextView
        android:id="@+id/tv_logout"
        android:background="@drawable/shape_bg_bottom_line"
        android:text="@string/quit_login"
        android:gravity="center"
        android:paddingRight="@dimen/root_padding_15"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/sp_16"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    </LinearLayout>
</LinearLayout>
