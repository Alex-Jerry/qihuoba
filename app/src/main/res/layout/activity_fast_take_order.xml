<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chart_background"
    android:orientation="vertical"
    tools:context="com.yjjr.yjfutures.ui.trade.FastTakeOrderActivity">

    <com.yjjr.yjfutures.widget.HeaderView
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:main_title="@string/symbol"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:text="一键快速下单"
                android:textColor="@color/main_text_color"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center"
                android:padding="@dimen/root_padding_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/trade_num"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"/>

                <RadioGroup
                    android:id="@+id/rg_hand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_hand_1"
                        android:layout_width="38dp"
                        android:layout_height="17dp"
                        android:background="@drawable/selector_trade_rb_bg"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="1手"
                        android:textColor="@color/selector_trade_rb_text_color"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rb_hand_2"
                        android:layout_width="38dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/selector_trade_rb_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="2手"
                        android:textColor="@color/selector_trade_rb_text_color"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rb_hand_3"
                        android:layout_width="38dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/selector_trade_rb_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="3手"
                        android:textColor="@color/selector_trade_rb_text_color"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rb_hand_4"
                        android:layout_width="38dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/selector_trade_rb_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="4手"
                        android:textColor="@color/selector_trade_rb_text_color"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rb_hand_5"
                        android:layout_width="38dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/selector_trade_rb_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="5手"
                        android:textColor="@color/selector_trade_rb_text_color"
                        android:textSize="12sp"/>
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_divider_small"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center"
                android:padding="@dimen/root_padding_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="触发止赢"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:id="@+id/tv_stop_win"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="=触发止损*5"
                    android:textColor="@color/main_color_red"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_divider_small"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center"
                android:padding="@dimen/root_padding_15">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="触发止损"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"/>


                <RadioGroup
                    android:id="@+id/rg_sl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_divider_small"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center"
                android:padding="@dimen/root_padding_15">

                <TextView
                    style="@style/text_color_333333_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/exchange_rate"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:id="@+id/tv_exchange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"
                    tools:text="$123"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_divider_small"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center"
                android:padding="@dimen/root_padding_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/bzj"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:id="@+id/bzj_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"
                    tools:text="$123"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_divider_small"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center"
                android:padding="@dimen/root_padding_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/zhjjf"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:id="@+id/trade_fee_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/sp_14"
                    tools:text="$123"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_divider_small"
                android:background="@color/divider_color"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:padding="@dimen/root_padding_15"
                android:text="说明：\n1.一旦开启，点击购买\n2.适当操作，理性投资"
                android:textColor="@color/second_text_color"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:textColor="@color/main_text_color"/>

    <Button
        android:id="@+id/btn_open"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/selector_common_btn_bg"
        android:drawableLeft="@drawable/ic_fast_order_dark"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="@string/fast_order"
        android:textSize="@dimen/common_btn_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="@string/read_and_agree"
            android:textColor="@color/second_text_color"
            android:textSize="@dimen/sp_16"
            app:buttonTint="@color/main_text_color"/>

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-15dp"
            android:text="《投资人与点买人合作协议》"
            android:textColor="@color/main_color"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>
</LinearLayout>
