<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="@dimen/root_padding_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/root_padding_10">

        <TextView
            style="@style/text_color_666666_14sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="今持仓"/>

        <TextView
            android:id="@+id/tv_today_position"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123456"/>

        <TextView
            style="@style/text_color_666666_14sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="昨持仓"/>

        <TextView
            android:id="@+id/tv_yesterday_position"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123456"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/root_padding_10">

        <TextView
            style="@style/text_color_666666_14sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="今结"/>

        <TextView
            android:id="@+id/tv_today_count"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123456"/>

        <TextView
            style="@style/text_color_666666_14sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="昨结"/>

        <TextView
            android:id="@+id/tv_yesterday_count"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123456"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/root_padding_10">

        <TextView
            style="@style/text_color_666666_14sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="总手"/>

        <TextView
            android:id="@+id/tv_total_hand"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123456"/>

        <TextView
            style="@style/text_color_666666_14sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="金额"/>

        <TextView
            android:id="@+id/tv_amount"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123456"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/root_padding_10">

        <TextView
            style="@style/text_color_666666_14sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="涨停"/>

        <TextView
            android:id="@+id/tv_limit_up"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123456"/>

        <TextView
            style="@style/text_color_666666_14sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="跌停"/>

        <TextView
            android:id="@+id/tv_limit_down"
            style="@style/text_color_333333_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123456"/>
    </LinearLayout>
</LinearLayout>