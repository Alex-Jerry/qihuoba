<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@drawable/shape_bg_bottom_line"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/view_header_image_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:clickable="false"
        android:focusable="false"
        android:paddingLeft="20dp"
        android:paddingRight="35dp"
        android:src="@drawable/drawable_header_back1"/>

    <TextView
        android:id="@+id/view_header_text_maintitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxEms="10"
        android:singleLine="true"
        android:text="@string/title"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/text_size_20sp"
        />


    <TextView
        android:id="@+id/view_header_text_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/main_text_color"
        android:textSize="13sp"
        />

    <View
        android:id="@+id/reddot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/view_header_text_subtitle"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_reddot_bg"
        android:visibility="gone"/>
</RelativeLayout>
