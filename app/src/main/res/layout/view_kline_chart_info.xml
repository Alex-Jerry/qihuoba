<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_80_000000">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/sp_12"
        android:padding="4dp"
        tools:text="201511111"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/open_price"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/main_text_color"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_open_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/price"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/third_text_color"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/high_price"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/main_text_color"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_high_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/price"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/third_text_color"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/low_price"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/main_text_color"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_low_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/price"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/third_text_color"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/close_price"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/main_text_color"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_close_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/price"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/third_text_color"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/vg_change_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/change_rate"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/main_text_color"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_change_rate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/price"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/third_text_color"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/volume"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/main_text_color"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_vol"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/price"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/third_text_color"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>