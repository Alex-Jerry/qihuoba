<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark"
    tools:context="com.yjjr.yjfutures.ui.mine.UserInfoActivity">

    <com.yjjr.yjfutures.widget.HeaderView
        android:id="@+id/header_view"
        app:main_title="@string/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/root_padding_15">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_auth"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="@dimen/root_padding_10"
                android:layout_marginTop="@dimen/common_divider_small"
                android:background="@drawable/shape_bg_bottom_line"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:text="@string/auth_name"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/sp_14"/>

            <TextView
                style="@style/text_color_666666_12sp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginRight="26dp"
                android:gravity="center"
                tools:text="审核中"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_deposit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="@dimen/root_padding_10"
                android:background="@drawable/shape_bg_bottom_line"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:text="提款支付宝、银行卡"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/sp_14"/>

            <TextView
                style="@style/text_color_666666_12sp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginRight="26dp"
                android:gravity="center"
                tools:text="审核中"/>
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_bind_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="@dimen/root_padding_10"
                android:background="@drawable/shape_bg_bottom_line"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:text="@string/bind_phone"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/sp_14"/>

            <TextView
                style="@style/text_color_666666_12sp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginRight="26dp"
                android:gravity="center"
                tools:text="市场资讯"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="@dimen/root_padding_10"
                android:background="@drawable/shape_bg_bottom_line"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:text="@string/login_pwd"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/sp_14"/>

            <TextView
                style="@style/text_color_666666_12sp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginRight="26dp"
                android:gravity="center"
                tools:text="审核中"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/text_color_666666_12sp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginRight="26dp"
                android:gravity="center"
                tools:text="审核中"/>

            <TextView
                android:id="@+id/tv_pay_pwd"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="@dimen/root_padding_10"
                android:background="@drawable/selector_common_press_bg"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:text="@string/pay_pwd"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/sp_14"/>
        </FrameLayout>


    </LinearLayout>


    <View
        style="@style/style_divider"/>
</LinearLayout>
