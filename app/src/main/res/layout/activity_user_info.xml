<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chart_background"
    android:orientation="vertical"
    tools:context="com.yjjr.yjfutures.ui.mine.UserInfoActivity">

    <com.yjjr.yjfutures.widget.HeaderView
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:main_title="@string/user_info"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_bg_bottom_line"
        android:orientation="vertical"
        android:paddingLeft="@dimen/root_padding_15">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_auth"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_bg_bottom_line"
                android:drawableLeft="@drawable/ic_user_info2"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp_10"
                android:text="@string/auth_name"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/tv_name"
                style="@style/text_color_666666_12sp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginRight="26dp"
                android:gravity="center"
                android:text="@string/unbind"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_deposit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_bg_bottom_line"
                android:drawableLeft="@drawable/ic_bank_card"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp_10"
                android:text="支付宝账户"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/tv_card"
                style="@style/text_color_666666_12sp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginRight="26dp"
                android:gravity="center"
                android:text="@string/add"/>
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_pay_pwd"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_bg_bottom_line"
                android:drawableLeft="@drawable/ic_lock2"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@drawable/icon_right_arrow"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp_10"
                android:text="@string/pay_pwd"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/sp_14"/>


            <TextView
                android:id="@+id/tv_pwd"
                style="@style/text_color_666666_12sp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginRight="26dp"
                android:gravity="center"
                android:text="@string/add"/>
        </FrameLayout>


    </LinearLayout>

</LinearLayout>
