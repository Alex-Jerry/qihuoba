<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/chart_background"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/background_dark"
        android:padding="@dimen/root_padding_10">

        <TextView
            android:id="@+id/tv_customer_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_common_press_bg"
            android:drawableLeft="@drawable/ic_customer_service"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:text="@string/main_customer"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/selector_common_press_bg"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:text="@string/setting"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="期货大师"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20sp"/>
    </FrameLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_dark"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:text="@string/jzc"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/text_size_15sp"/>

                <TextView
                    android:id="@+id/tv_net"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/third_text_color"
                    android:textSize="30sp"
                    tools:text="1234"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/root_padding_15">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可用余额"
                            android:textColor="@color/main_text_color"
                            android:textSize="@dimen/text_size_15sp"/>

                        <TextView
                            android:id="@+id/tv_yue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/third_text_color"
                            android:textSize="18sp"
                            tools:text="1234"/>

                        <Button
                            android:id="@+id/btn_deposit"
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:background="@drawable/shape_third_text_color_border_bg"
                            android:drawableLeft="@drawable/ic_deposit"
                            android:drawablePadding="6dp"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:text="@string/deposit"
                            android:textColor="@color/third_text_color"
                            android:textSize="@dimen/sp_16"/>
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/common_divider_small"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="45dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/divider_color"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zybzj"
                            android:textColor="@color/main_text_color"
                            android:textSize="@dimen/text_size_15sp"/>

                        <TextView
                            android:id="@+id/tv_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/second_text_color"
                            android:textSize="18sp"
                            tools:text="1234"/>

                        <Button
                            android:id="@+id/btn_withdraw"
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:background="@drawable/selector_trade_bottom_rb_bg"
                            android:drawableLeft="@drawable/ic_withdraw"
                            android:drawablePadding="6dp"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:text="@string/withdraw"
                            android:textColor="@color/selector_trade_bottom_rb_color"
                            android:textSize="@dimen/sp_16"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_dark"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/root_padding_10"
                        android:layout_marginTop="@dimen/root_padding_10"
                        android:src="@mipmap/ic_launcher_icon"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn_login"
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:background="@drawable/selector_trade_bottom_rb_bg"
                            android:drawableLeft="@drawable/ic_login"
                            android:drawablePadding="6dp"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:text="@string/login"
                            android:textColor="@color/selector_trade_bottom_rb_color"
                            android:textSize="@dimen/sp_16"/>

                        <Button
                            android:id="@+id/btn_register"
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/shape_third_text_color_border_bg"
                            android:drawableLeft="@drawable/ic_register"
                            android:drawablePadding="6dp"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:text="@string/register"
                            android:textColor="@color/third_text_color"
                            android:textSize="@dimen/sp_16"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_bg_top_bottom_line"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/root_padding_15">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_one"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingRight="@dimen/root_padding_10"
                            android:layout_marginTop="@dimen/common_divider_small"
                            android:background="@drawable/shape_bg_bottom_line"
                            android:drawableLeft="@drawable/ic_trade_detail"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/icon_right_arrow"
                            android:gravity="center_vertical"
                            android:text="@string/fund_detail"
                            android:textColor="@color/main_text_color"
                            android:textSize="@dimen/sp_14"/>

                        <TextView
                            style="@style/text_color_666666_12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="26dp"
                            android:gravity="center"
                            tools:text="审核中"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_two"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingRight="@dimen/root_padding_10"
                            android:background="@drawable/shape_bg_bottom_line"
                            android:drawableLeft="@drawable/ic_user_info"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/icon_right_arrow"
                            android:gravity="center_vertical"
                            android:text="@string/user_info"
                            android:textColor="@color/main_text_color"
                            android:textSize="@dimen/sp_14"/>

                        <TextView
                            style="@style/text_color_666666_12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="26dp"
                            android:gravity="center"
                            tools:text="审核中"/>
                    </FrameLayout>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_three"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingRight="@dimen/root_padding_10"
                            android:background="@drawable/shape_bg_bottom_line"
                            android:drawableLeft="@drawable/ic_about_us"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/icon_right_arrow"
                            android:gravity="center_vertical"
                            android:text="@string/about_us"
                            android:textColor="@color/main_text_color"
                            android:textSize="@dimen/sp_14"/>

                        <TextView
                            style="@style/text_color_666666_12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="26dp"
                            android:gravity="center"
                            tools:text="审核中"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/text_color_666666_12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="26dp"
                            android:gravity="center"
                            tools:text="审核中"/>

                        <TextView
                            android:id="@+id/tv_four"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingRight="@dimen/root_padding_10"
                            android:background="@drawable/shape_bg_bottom_line"
                            android:drawableLeft="@drawable/ic_risk_info"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/icon_right_arrow"
                            android:gravity="center_vertical"
                            android:text="@string/risk_info"
                            android:textColor="@color/main_text_color"
                            android:textSize="@dimen/sp_14"/>
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
