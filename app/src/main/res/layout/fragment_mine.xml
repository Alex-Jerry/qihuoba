<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
              tools:context="com.yjjr.yjfutures.found.FoundFragment">

    <TextView
        style="@style/text_color_333333_17sp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/shape_bg_bottom_line"
        android:gravity="center"
        android:text="@string/mine"/>

    <ImageView
        android:layout_marginTop="@dimen/root_padding_10"
        android:layout_marginBottom="@dimen/root_padding_10"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_login"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"/>
        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"/>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/root_padding_10"
            android:background="@drawable/shape_bg_bottom_line"
            android:orientation="vertical"
            android:paddingLeft="@dimen/root_padding_15">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_one"
                    style="@style/text_color_333333_15sp"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginRight="@dimen/root_padding_10"
                    android:layout_marginTop="@dimen/common_divider_small"
                    android:background="@drawable/shape_bg_bottom_line"
                    android:drawableRight="@drawable/icon_right_arrow"
                    android:gravity="center_vertical"
                    android:text="@string/mine_trade"/>

                <TextView
                    style="@style/text_color_666666_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="26dp"
                    android:gravity="center"
                    tools:text="审核中"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_two"
                    style="@style/text_color_333333_15sp"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginRight="@dimen/root_padding_10"
                    android:background="@drawable/shape_bg_bottom_line"
                    android:drawableRight="@drawable/icon_right_arrow"
                    android:gravity="center_vertical"
                    android:text="@string/user_info"/>

                <TextView
                    style="@style/text_color_666666_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="26dp"
                    android:gravity="center"
                    tools:text="审核中"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_three"
                    style="@style/text_color_333333_15sp"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginRight="@dimen/root_padding_10"
                    android:background="@drawable/shape_bg_bottom_line"
                    android:drawableRight="@drawable/icon_right_arrow"
                    android:gravity="center_vertical"
                    android:text="@string/fund_detail"/>

                <TextView
                    style="@style/text_color_666666_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="26dp"
                    android:gravity="center"
                    tools:text="审核中"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_four"
                    style="@style/text_color_333333_15sp"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginRight="@dimen/root_padding_10"
                    android:background="@drawable/shape_bg_bottom_line"
                    android:drawableRight="@drawable/icon_right_arrow"
                    android:gravity="center_vertical"
                    android:text="推广赚钱"/>

                <TextView
                    style="@style/text_color_666666_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="26dp"
                    android:gravity="center"
                    tools:text="市场资讯"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_five"
                    style="@style/text_color_333333_15sp"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginRight="@dimen/root_padding_10"
                    android:background="@drawable/shape_bg_bottom_line"
                    android:drawableRight="@drawable/icon_right_arrow"
                    android:gravity="center_vertical"
                    android:text="@string/risk_info"/>

                <TextView
                    style="@style/text_color_666666_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="26dp"
                    android:gravity="center"
                    tools:text="审核中"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_six"
                    style="@style/text_color_333333_15sp"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginRight="@dimen/root_padding_10"
                    android:background="@drawable/shape_bg_bottom_line"
                    android:drawableRight="@drawable/icon_right_arrow"
                    android:gravity="center_vertical"
                    android:text="@string/about_us"/>

                <TextView
                    style="@style/text_color_666666_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="26dp"
                    android:gravity="center"
                    tools:text="审核中"/>
            </FrameLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
